<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".activities.RegisterActivity"
    android:background="@color/blanco_fondo">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvTituloRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido a FoodyBurguer"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/azul"/>
    <TextView
        android:id="@+id/tvDescrRegistro"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Registrate y disfruta la experencia."
        android:textSize="20dp"
        android:textColor="@color/azul"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp"
        />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Registrar"
        android:textColor="#F5F5F5"
        android:textColorLink="@color/pink"
        android:textSize="20dp"/>

</LinearLayout>